{
	"private": true,
	"name": "web-app",
	"version": "0.1.0",
	"description": "PWA（Progressive Web App）.",
	"author": "",
	"license": "ISC",
	"browserslist": [
		"defaults"
	],
	"scripts": {
		"start": "cross-env NODE_ENV=development node scripts/start.js",
		"build": "cross-env NODE_ENV=production node scripts/build.js",
		"test": "jest --config=config/jest.config.js",
		"type-check": "tsc --project tsconfig.json --noEmit",
		"lint": "eslint --config .eslintrc.js --ext js,jsx,.ts,.tsx --ignore-pattern src/vendors/**/* --cache --cache-location node_modules/.cache/.eslintcache --quiet --fix src/",
		"docs": "jsdoc -P ./package.json -R ./README.md -c ./config/jsdoc.config.js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "npm run lint"
	},
	"dependencies": {
		"regenerator-runtime": "^0.13.7"
	},
	"devDependencies": {
		"@babel/core": "^7.10.5",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-proposal-object-rest-spread": "^7.10.4",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/preset-env": "^7.10.4",
		"@babel/preset-typescript": "^7.10.4",
		"@typescript-eslint/eslint-plugin": "^3.7.1",
		"@typescript-eslint/parser": "^3.7.1",
		"babel-jest": "^26.1.0",
		"babel-loader": "^8.1.0",
		"case-sensitive-paths-webpack-plugin": "^2.3.0",
		"copy-webpack-plugin": "^6.0.3",
		"cross-env": "^7.0.2",
		"css-loader": "^4.0.0",
		"del": "^5.1.0",
		"docdash": "^1.2.0",
		"eslint": "^7.5.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"file-loader": "^6.0.0",
		"html-loader": "^1.1.0",
		"html-webpack-plugin": "^4.3.0",
		"husky": "^4.2.5",
		"image-webpack-loader": "^6.0.0",
		"jest": "^26.1.0",
		"jsdoc": "^3.6.5",
		"jsdoc-babel": "^0.5.0",
		"lint-staged": "^10.2.11",
		"mini-css-extract-plugin": "^0.9.0",
		"optimize-css-assets-webpack-plugin": "^5.0.3",
		"postcss-flexbugs-fixes": "^4.2.1",
		"postcss-loader": "^3.0.0",
		"postcss-normalize": "^9.0.0",
		"postcss-preset-env": "^6.7.0",
		"postcss-safe-parser": "^4.0.2",
		"prettier": "2.0.5",
		"sass": "^1.26.10",
		"sass-loader": "^9.0.2",
		"style-loader": "^1.2.1",
		"terser-webpack-plugin": "^3.0.8",
		"typescript": "^3.9.7",
		"url-loader": "^4.1.0",
		"webpack": "^4.44.0",
		"webpack-bundle-analyzer": "^3.8.0",
		"webpack-dev-server": "^3.11.0",
		"workbox-webpack-plugin": "^5.1.3",
		"worker-plugin": "^4.0.3"
	}
}
