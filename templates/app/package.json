{
	"private": true,
	"name": "web-app",
	"version": "0.1.0",
	"description": "PWA（Progressive Web App）.",
	"author": "",
	"license": "ISC",
	"browserslist": [
		"defaults"
	],
	"scripts": {
		"start": "cross-env NODE_ENV=development node scripts/start.js",
		"build": "cross-env NODE_ENV=production node scripts/build.js",
		"test": "jest --config=config/jest.config.js",
		"type-check": "tsc --project tsconfig.json --noEmit",
		"lint-js": "eslint src/ --config .eslintrc.js --ext js,jsx,ts,tsx --fix --quiet --cache --cache-location node_modules/.cache/.eslintcache",
		"lint-css": "stylelint src/**/*.{css,scss,sass} --fix --quiet --cache --cache-location node_modules/.cache/.stylelintcache",
		"docs": "jsdoc -P ./package.json -R ./README.md -c ./config/jsdoc.config.js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "npm run lint-js",
		"*.{css,scss,sass,js,jsx,ts,tsx}": "npm run lint-css"
	},
	"dependencies": {
		"regenerator-runtime": "^0.13.7"
	},
	"devDependencies": {
		"@babel/core": "^7.12.3",
		"@babel/plugin-proposal-class-properties": "^7.12.1",
		"@babel/plugin-proposal-object-rest-spread": "^7.12.1",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/preset-env": "^7.12.1",
		"@babel/preset-typescript": "^7.12.1",
		"@typescript-eslint/eslint-plugin": "^4.5.0",
		"@typescript-eslint/parser": "^4.5.0",
		"babel-jest": "^26.6.1",
		"babel-loader": "^8.1.0",
		"case-sensitive-paths-webpack-plugin": "^2.3.0",
		"copy-webpack-plugin": "^6.2.1",
		"cross-env": "^7.0.2",
		"css-loader": "^5.0.0",
		"cssnano": "^4.1.10",
		"del": "^6.0.0",
		"docdash": "^1.2.0",
		"eslint": "^7.12.0",
		"eslint-config-prettier": "^6.14.0",
		"eslint-plugin-prettier": "^3.1.4",
		"file-loader": "^6.1.1",
		"html-loader": "^1.3.2",
		"html-webpack-plugin": "^4.5.0",
		"husky": "^4.3.0",
		"image-webpack-loader": "^7.0.1",
		"jest": "^26.6.1",
		"jsdoc": "^3.6.6",
		"jsdoc-babel": "^0.5.0",
		"lint-staged": "^10.4.2",
		"mini-css-extract-plugin": "^1.2.0",
		"optimize-css-assets-webpack-plugin": "^5.0.4",
		"postcss-flexbugs-fixes": "^4.2.1",
		"postcss-loader": "^4.0.4",
		"postcss-normalize": "^9.0.0",
		"postcss-preset-env": "^6.7.0",
		"postcss-safe-parser": "^5.0.2",
		"prettier": "2.1.2",
		"sass": "^1.27.0",
		"sass-loader": "^10.0.4",
		"style-loader": "^2.0.0",
		"stylelint": "^13.7.2",
		"stylelint-color-format": "^1.1.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-config-standard": "^20.0.0",
		"stylelint-order": "^4.1.0",
		"stylelint-prettier": "^1.1.2",
		"stylelint-scss": "^3.18.0",
		"terser-webpack-plugin": "^4.2.3",
		"typescript": "^4.0.3",
		"url-loader": "^4.1.1",
		"webpack": "^4.44.2",
		"webpack-bundle-analyzer": "^3.9.0",
		"webpack-dev-server": "^3.11.0",
		"workbox-webpack-plugin": "^5.1.4",
		"worker-plugin": "^5.0.0"
	}
}
