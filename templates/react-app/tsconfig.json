{
	"compilerOptions": {
		"target": "ES5",
		"sourceMap": true,
		"jsx": "preserve",
		"rootDir": ".",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"noImplicitThis": true
		// "noImplicitAny": true
	},
	"include": ["src", "scripts", "config", ".eslintrc.js"],
	"exclude": ["node_modules", "docs", "public", "build", "src/assets/**/*", "src/vendors/**/*", "**/*.spec.ts", "**/*.test.ts"]
}
